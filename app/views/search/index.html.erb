
<div class="row" >
  <div class="col-md-12">
    <div class="container">
      <div class="well">
        <table id="data_table" class = "search_results" >
          <thead>
            <tr>
              <div class="col-md-2">
                <th>Title</th>
              </div>
              <div class="col-md-2">
                <th>Product Group</th>
              </div>
              <div class="col-md-2">
                <th>Manufacturer</th>
              </div>
              <div class="col-md-3">
                <th>Price</th>
              </div>
              <div class="col-md-3">
                <th>SalesRank</th>
              </div>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr class = "items">
              <div class="col-md-2" class="results" >
                <td><%= link_to item.ItemAttributes.Title, "/search/#{item.ItemAttributes.EAN}"  %></td>
              </div>
              <div class="col-md-2">
                <td><%= item.ItemAttributes.ProductGroup %></td>
              </div>
              <div class="col-md-2">
                <td><%= item.ItemAttributes.Manufacturer %></td>
              </div>
              <div class="col-md-3">
                <td><%= item.OfferSummary.LowestNewPrice.FormattedPrice if item.OfferSummary%></td>
              </div>
              <div class="col-md-3">
                <td><%= item.SalesRank %></td>
              </div>
            </div>
          </div>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
</div>
<%= link_to "raw_html_scraped" ,"/search/more_search_results/#{params['query']}"  %>
